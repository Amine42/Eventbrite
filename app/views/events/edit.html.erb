<% if user_signed_in? %>

<h1>Modification de l'event</h1>

<div class="col-6">
    <%= form_for @event do |f|%>
        <div class="form-group">
            <label for="title">titre de l'event</label>
            <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
            <label for="description">description de l'event</label>
            <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
            <label for="location">lieux de l'event</label>
            <%= f.text_field :location, class: "form-control" %>
        </div>
        <div class="form-group">
            <label for="start_date">date de l'event</label>
            <%= f.datetime_field :start_date, class: "form-control" %>
        </div>
        <div class="form-group">
        <label for="duration">duree de l'event (en minutes, multiple de 5)</label>
            <%= f.number_field :duration, class: "form-control" %>
        </div>
        <div class="form-group">
            <label for="price">prix de l'event</label>
            <%= f.number_field :price, class: "form-control" %>
        </div>

        <input type="submit" class="btn btn-primary" value="Modifier l'event">
        <a href="<%= event_path(@event.id) %>" class="btn btn-primary" data-confirm="Supprimer cette event?" data-method="DELETE" >Supprimer l'event</a>
    <% end %>
</div>
<% else %>
    <h2>connectez vous pour editer un event</h2>
<% end %>