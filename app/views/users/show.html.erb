<% if current_user.id == @user.id %>
    <h1 class="text-center m-4 mb-5">Voici les details de l'utilisateur!</h1>
    <div class="text-center m-5">
        <h2><%= @user.first_name %>  <%= @user.last_name %></h2>
        <p>description de l'utilisateur: <%= @user.description %></p>
        <p>email de l'utilisateur: <%= @user.email %></p>
    </div>
<% else %>
    <h1 class="text-center m-4 mb-5">Vous n'avez pas acces a cette page</h1>
<% end %>