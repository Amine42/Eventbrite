<% if current_user.id == @user.id %>
    <h1 class="text-center m-4 mb-5">Voici les details de l'utilisateur!</h1>
    <div class="text-center m-5">
        <h2><%= @user.first_name %>  <%= @user.last_name %></h2>
        <p>description de l'utilisateur: <%= @user.description %></p>
        <p>email de l'utilisateur: <%= @user.email %></p>
        <a href="<%= edit_user_registration_path %>">changer de mot de passe</a>
    </div>
    <h2 class="text-center">voici les events cree par cette utilisateur</h2>
    <div class="text-center m-5">
        <% user_event = Event.all.where(admin_id: @user.id) %>
        <% user_event.each do |event| %>
            <p><a href="<%= event_path(event.id) %>"><%= event.title %></a></p>
        <% end %>
    </div>
<% else %>
    <h1 class="text-center m-4 mb-5">Vous n'avez pas acces a cette page</h1>
<% end %>